<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:rowCount="" -- to declear the rows number of the layout
    android:columnCount="" -- to declear the columns number of the layout
    android:orientation="" 
    -- the Default orientation is horizantiol (row by row)
    -- the nonDefault orientation is vertical (column by column)
    android:layout_rowSpan=""
    android:layout_ColumnSpan=""
    -- rowSpan is linked with the height
    -- columnSpan is linked with the width
    -- we must use android:layout_gravity = "fill_horizontal" when doing ColumnSpan
    -- we must use android:layout_gravity = "fill_vertical" when doing rowSpan
    tools:context=".MainActivity">
</GridLayout>
